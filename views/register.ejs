<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card border-danger mb-3" style="max-width: 30rem;">
            <div class="card-header text-center">
                <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i></h1>
                <h3>Register</h3>
            </div>
            <div class="card-body text-center">
                <form action="/user/register" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                        value="<%= typeof name != 'undefined' ? name : '' %>">
                    </div> 
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email Account"
                        value="<%= typeof email != 'undefined' ? email : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="password1">Password</label>
                        <input type="password" id="password1" name="password1" class="form-control" placeholder="Enter Password"
                        value="<%= typeof email != 'undefined' ? password1 : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="password2">Confirm Password</label>
                        <input type="password" id="password2" name="password2" class="form-control" placeholder="Re-enter Password"
                        value="<%= typeof email != 'undefined' ? password2 : '' %>">
                    </div>
                    <p><%- include('partials/messages.ejs') %></p>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
            <p>Already have an account?<a href="/user/login">Sign In</a></p>
          </div>
    </div>
</div>