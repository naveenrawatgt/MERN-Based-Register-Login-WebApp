<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card border-danger mb-3" style="max-width: 30rem;">
            <div class="card-header text-center">
                <h1><i class="fas fa-login fa-3x"></i></h1>
                <h3>Sign In</h3>
            </div>
            <div class="card-body text-center">
                <form action="/user/login" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email Account"
                        value="<%= typeof email != 'undefined' ? email : '' %>">
                    </div> 
                    <div class="form-group">
                        <label for="password">Email</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"
                        value="<%= typeof password != 'undefined' ? password : '' %>">
                    </div>
                    <p><%- include('partials/messages.ejs') %></p>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
                <p>Not registered yet? <a href="/user/register">Create Account</a></p>
            </div>
          </div>
    </div>
</div>